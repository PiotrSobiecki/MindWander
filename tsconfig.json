{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "types": ["chrome"]
  },
  "include": ["src/**/*.ts", "src/config.ts_backup"],
  "exclude": ["node_modules"]
}
